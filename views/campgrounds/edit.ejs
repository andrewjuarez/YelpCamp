<% include ../partials/header %>
<div class="container">
    <div class="row">
        <h3 style="text-align: center;">Edit <%= campground.name %></h3>
        <div style="width: 30%; margin: 0 auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST"> 
                <input classs="form-control" type="text" name="campground[name]" value="<%= campground.name %>">
                <input classs="form-control" type="text" name="campground[image]" value="<%= campground.image %>">
                <input classs="form-control" type="text" name="campground[desc]" value="<%= campground.desc %>">
                <input classs="form-control" type="number" name="campground[rate]" min="0" value="<%= campground.rate %>">
                <input class="btn btn-lg btn-primary btn-block" type="submit">
            </form>
        </div>
    </div>
</div>

<% include ../partials/footer %>